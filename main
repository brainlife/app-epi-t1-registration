#!/bin/bash
#PBS -l nodes=1:ppn=8,vmem=40gb,walltime=4:00:00
#PBS -N fslDtiinit

#module load singularity 2> /dev/null

set -e
resolution=`jq -r '.resolution' config.json`

if [ ! -f dwi_aligned.nii.gz ]; then
	echo "dwi to t1 registration"
	time singularity exec -e docker://brainlife/fsl:5.0.9 ./fslRegistration.sh
fi

if [[ ! -z ${resolution} ]]; then
	if [ ! -f dwi.nii.gz ]; then
		echo "reslice dwi"
		time singularity exec -e docker://brainlife/dipy:0.14.2 ./reslice_fxn.py
	fi
else
	mv dwi_aligned.nii.gz dwi.nii.gz
fi

if [ ! -f dwi.bvecs ]; then
	echo "rotate bvecs"
	time singularity exec -e docker://brainlife/mcr:neurodebian1604-r2017a ./compiled/rotateBvecs
fi

echo "Complete"

#check for output files
if [ -f dwi.nii.gz ];
then
	mkdir -p dwi transform
	mv dwi.nii.gz ./dwi/
	mv dwi.bvals ./dwi/
	mv dwi.bvecs ./dwi/
	mv nodif_acpc.mat ./transform/affine.txt
	rm -rf *.nii.gz
	echo 0 > finished
else
	echo "output missing"
	echo 1 > finished
	exit 1
fi

